---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
        <meta name="msapplication-TileColor" content="#da532c" />
        <meta name="theme-color" content="#ffffff" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <main>
            <slot />
            <!-- All the pages will be rendered here -->
        </main>
    </body>
</html>

<style is:global>
    :root {
        background-image: url("../assets/wallpaper.jpeg");
    }
    html {
        font-family: system-ui, sans-serif;
        background: #13151a;
    }
    .text-center {
        font-size: 1.25rem;
        display: inline-block;
        align-self: center;
        margin-right: 500px;
    }
    .text-output {
        padding-left: 20px;
        color: white;
        font-size: 1.25rem;
        /* display: inline-block; */
        align-self: center;
    }
    .text-input {
        padding-left: 5px;
        color: rgba(160, 214, 252, 1);
        font-size: 1rem;
        /* display: inline-block; */
        align-self: center;
    }
    .terminal-container {
        position: relative;
        display: flex;
        justify-content: center;
        height: 80vh;
        margin-top: 80px;
    }
    .terminal-background {
        position: absolute;
        align-self: center;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
        width: 67.5%;
        height: 95%;
        background: #13151a;
        opacity: 0.8;
    }
    .terminal-content {
        position: relative;
        z-index: 1;
        padding: 20px;
        overflow: auto;
    }
    .terminal-inputfield {
        color: white;
        padding-left: 20px;
    }
    .terminal-input {
        background: transparent;
        color: white;
        font-size: 2rem;
        border: none;
        outline: none;
    }
    .bash-icon {
        width: 25px;
        height: 25px;
        align-self: center;
        margin-left: 500px;
        margin-right: 10px;
    }
    .navbar {
        display: flex;
        justify-content: space-between;
        /* align-items: center; */
        padding: 10px;
        background: #1f2937;
        color: white;
        /* border-top-left-radius: 10px; */
        /* border-top-right-radius: 10px; */
    }
    .traffic-lights {
        align-self: center;
        display: flex;
        gap: 0.5rem;
        margin-left: 10px;
    }
    .traffic-light {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.3); /* Border color */
    }
    .red {
        background-color: #ff5f56; /* Red color */
    }
    .yellow {
        background-color: #ffbd2e; /* Yellow color */
    }
    .green {
        background-color: #27c93f; /* Green color */
    }
</style>
