---
import "@fontsource/open-sans"; // Defaults to weight 400.
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
        <meta name="msapplication-TileColor" content="#da532c" />
        <meta name="theme-color" content="#ffffff" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <main>
            <slot />
            <!-- All the pages will be rendered here -->
        </main>
    </body>
</html>

<style is:global>
    :root {
        background-image: url("../assets/wallpaper.jpeg");
        object-fit: cover;
    }
    html {
        font-family: system-ui, sans-serif;
        background: #13151a;
    }
    .tac-one-regular {
        font-family: "Tac One", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    .text-center {
        user-select: none;
        font-size: 1.25rem;
        align-self: top;
        color: white;
        margin-right: auto;
    }
    .text-output {
        user-select: none;
        /* padding-left: 20px; */
        color: white;
        font-size: 1.25rem;
        /* display: inline-block; */
        align-self: center;
    }
    .text-input {
        padding-left: 5px;
        color: rgba(160, 214, 252, 1);
        font-size: 1rem;
        /* display: inline-block; */
        align-self: center;
    }
    .terminal-container {
        position: relative;
        display: flex;
        justify-content: center;
        height: 80vh;
        margin-top: 80px;
    }
    /* .terminal-background {
        position: absolute;
        align-self: center;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
        width: 67.5%;
        height: 95%;
        background: #13151a;
        opacity: 0.8;
    } */
    .terminal-content {
        position: absolute;
        z-index: 1;
        padding: 20px;
        margin-top: 80px;
        overflow-y: scroll;
        scrollbar-width: none;
        display: flex;
        justify-content: flex-start; /* Align content to the left */
        align-items: flex-start; /* Align items to the left */
        flex-direction: column;
        background-color: rgba(0, 0, 0, 0.8);
        background: transparent;
        width: 80%; /* Adjust width as needed */
        max-height: 60vh; /* Limit maximum height to fit within container */
    }
    .terminal-inputfield {
        color: white;
        padding-left: 20px;

        position: fixed;
        top: 79.4%;
        /* color: rgba(0, 0, 0, 0.8); */
        left: 8.9%;
        width: 82.4%;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }
    .terminal-input {
        background: transparent;
        color: white;
        font-size: 2rem;
        border: none;
        outline: none;
        font: small-caps 1.5rem "Tac One", sans-serif;

        /* position: fixed; */
    }
    .bash-icon {
        margin-top: 13px;
        width: 25px;
        height: 25px;
        align-self: top;
        align-items: center;
        margin-left: auto;
        margin-right: 10px;
        color: white;
    }
    .navbar {
        position: absolute;
        z-index: 1;
        display: flex;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
        width: 82%;
        height: 95%;
        justify-content: space-between;
        padding: 10px;
        background: #1f2937;
        opacity: 0.9;
        border-radius: 10px;
    }
    .traffic-lights {
        display: flex;
        gap: 0.5rem;
        margin-top: 25px;
        margin-left: 25px;
    }
    .traffic-light {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.3); /* Border color */
    }
    .red {
        background-color: #ff5f56; /* Red color */
    }
    .yellow {
        background-color: #ffbd2e; /* Yellow color */
    }
    .green {
        background-color: #27c93f; /* Green color */
    }
    .h1 {
        padding-left: 5px;
        color: white;
        font-size: 2rem;
        margin: 1rem 0;
    }
</style>
